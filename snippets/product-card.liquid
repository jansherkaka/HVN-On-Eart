<div class=" py-6 px-3 text-gray-600">
  <div class=" rounded-2xl h-full " style="border: 1px solid #B8AF9E;">
    <div class="py-3 px-3">
      <div class=" overflow-hidden rounded-2xl">
        <a href="{{ product_product.url }}">
          {% if product_product.featured_image %}
            <img
              src="{{ product_product.featured_image |  img_url: 'medium' }}"
              alt="{{ product_product.featured_image.alt }}"
              class=" w-full  rounded-2xl h-80 overflow-hidden transition duration-700 ease-in-out hover:scale-110 object-cover object-center  ">
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'w-full h-80 overflow-hidden object-cover object-center' }}
          {% endif %}
        </a>
      </div>
    </div>
    <div class="flex flex-col p-4">
      <a href="{{ product_product.url }}" class="font-medium">
        <h1 class=" text-2xl font-syne">
          {{ product_product.title }}</h1>
      </a>
      <p class=" font-syne text-base">{{ product_product.content | strip_html | truncatewords: 20 }}</p>
      <div class="flex gap-4">
        <div
          class="py-1 hover:bg-backgroudColor hover:text-white cursor-pointer text-sm px-4 rounded-full"
          style="border: 1px solid #B8AF9E;"
          onmouseover="this.style.borderColor='#B8AF9E'"
          onmouseout="this.style.borderColor='#B8AF9E'">Ideal for</div>
        <div
          class="py-1 hover:bg-backgroudColor hover:text-white  cursor-pointer text-sm px-4 rounded-full"
          style="border: 1px solid #B8AF9E;"
          onmouseover="this.style.borderColor='#B8AF9E'"
          onmouseout="this.style.borderColor='#B8AF9E'">Tacos</div>
        <div
          class="py-1 hover:bg-backgroudColor hover:text-white cursor-pointer text-sm px-4 rounded-full"
          style="border: 1px solid #B8AF9E;"
          onmouseover="this.style.borderColor='#B8AF9E'"
          onmouseout="this.style.borderColor='#B8AF9E'">Pasta</div>
      </div>
    </div>

  </div>
</div>