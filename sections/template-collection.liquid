<div class=" w-full">
  <div class="py-5" style="background-image: url({{ 'HVN.png'| asset_url }});"></div>
</div>
<div class="w-full bg-cover  flex items-center justify-center" style="background-image: url({{ 'hero-bg.png'| asset_url }});">
  <h1 class=" p-60 font-instrument text-white text-6xl">
    Maketplace
  </h1>
</div>
<div class="py-40 shadow-sm">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 items-center gap-8">
      <div>
        <img src="{{ 'offer.svg'| asset_url }}" alt="">
      </div>
      <div>
        <h1 class="text-6xl font-medium text-custom font-instrument tracking-wide mb-4">Our Offerings
        </h1>
        <p class="text-lg font-syne mb-5">Your gateway to a world of plant basedÂ and premium offerings. Elevate your everyday with delectable, sustainable choices for your fridge and beyond.
        </p>
      </div>
    </div>
  </div>
</div>

<div class="py-8">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {% for product in collection.products %}
        <div class=" py-6 px-3 text-gray-600">
          <div class=" rounded-2xl h-full " style="border: 1px solid #B8AF9E;">
            <div class="py-3 px-3 ">
              <div class=" overflow-hidden rounded-2xl">
                <a href="{{ product.url }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image |  img_url: 'medium' }}"
                      alt="{{ product.featured_image.alt }}"
                      class=" w-full  rounded-2xl h-80 overflow-hidden transition duration-700 ease-in-out hover:scale-110  object-cover object-center  ">
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-80 overflow-hidden object-cover object-center' }}
                  {% endif %}
                </a>
              </div>
            </div>
            <div class="flex flex-col p-4">
              <a href="{{ product.url }}" class="font-medium">
                <h1 class=" text-2xl font-syne">
                  {{ product.title }}</h1>
              </a>
              <p class=" h-20 font-syne text-base">{{ product.content | strip_html | truncatewords: 20 }}</p>
              <div class="flex gap-4">
                <span
                  class="py-1 hover:text-black font-medium text-backgroudColor cursor-pointer text-sm px-4 rounded-full"
                  style="border: 1px solid #B8AF9E;"
                  onmouseover="this.style.borderColor='#000'"
                  onmouseout="this.style.borderColor='#B8AF9E'">Ideal for</span>
                {% assign badges = product.tags %}
                {% for badge in badges %}
                  <span
                    class="py-1 hover:text-black font-medium text-backgroudColor cursor-pointer text-sm px-4 rounded-full"
                    style="border: 1px solid #B8AF9E;"
                    onmouseover="this.style.borderColor='#000'"
                    onmouseout="this.style.borderColor='#B8AF9E'">{{ badge }}</span>
                {% endfor %}

              </div>

              <a
                href="{{ product.url }}"
                class=" my-4 hover:bg-backgroudColor text-custom font-medium hover:text-white text-center py-3 rounded-2xl"
                style="border: 1px solid #B8AF9E;"
                onmouseover="this.style.borderColor='#B8AF9E'"
                onmouseout="this.style.borderColor='#B8AF9E'">
                Buy Now
              </a>

            </div>
          </div>
        </div>
      {% else %}
        <p>there is no collection</p>
      {% endfor %}
    </div>
  </div>
</div>