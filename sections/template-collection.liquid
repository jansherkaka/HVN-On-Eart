<div class="w-full bg-cover  flex items-center justify-center" style="background-image: url({{ 'hero-bg.png'| asset_url }});">
  <h1 class=" p-60 font-instrument text-white text-6xl">
    Maketplace
  </h1>
</div>
<div class="py-8">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {% for product in collection.products %}
        <div class=" py-6 px-3 text-gray-600">
          <div class=" rounded-2xl h-full " style="border: 1px solid #B8AF9E;">
            <div class="py-3 px-3 ">
              <div class=" overflow-hidden rounded-2xl">
                <a href="{{ product.url }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image |  img_url: 'medium' }}"
                      alt="{{ product.featured_image.alt }}"
                      class=" w-full  rounded-2xl h-80 overflow-hidden transition duration-700 ease-in-out hover:scale-110  object-cover object-center  ">
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-80 overflow-hidden object-cover object-center' }}
                  {% endif %}
                </a>
              </div>
            </div>
            <div class="flex flex-col p-4">
              <a href="{{ product.url }}" class="font-medium">
                <h1 class=" text-2xl font-syne">
                  {{ product.title }}</h1>
              </a>
              <p class=" h-24 font-syne text-base">{{ product.content | strip_html | truncatewords: 20 }}</p>
              <div class="flex gap-4">
                <div
                  class="py-1 hover:bg-backgroudColor hover:text-white cursor-pointer text-sm px-4 rounded-full"
                  style="border: 1px solid #B8AF9E;"
                  onmouseover="this.style.borderColor='#B8AF9E'"
                  onmouseout="this.style.borderColor='#B8AF9E'">Ideal for</div>
                <div
                  class="py-1 hover:bg-backgroudColor hover:text-white  cursor-pointer text-sm px-4 rounded-full"
                  style="border: 1px solid #B8AF9E;"
                  onmouseover="this.style.borderColor='#B8AF9E'"
                  onmouseout="this.style.borderColor='#B8AF9E'">Tacos</div>
                <div
                  class="py-1 hover:bg-backgroudColor hover:text-white cursor-pointer text-sm px-4 rounded-full"
                  style="border: 1px solid #B8AF9E;"
                  onmouseover="this.style.borderColor='#B8AF9E'"
                  onmouseout="this.style.borderColor='#B8AF9E'">Pasta</div>
              </div>

              <a
                href="{{ product.url }}"
                class=" my-4 hover:bg-backgroudColor hover:text-white text-center py-3 rounded-2xl"
                style="border: 1px solid #B8AF9E;"
                onmouseover="this.style.borderColor='#B8AF9E'"
                onmouseout="this.style.borderColor='#000'">
                Buy Now
              </a>

            </div>
          </div>
        </div>
      {% else %}
        <p>there is no collection</p>
      {% endfor %}
    </div>
  </div>
</div>