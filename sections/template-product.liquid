<div class=" w-full">
  <div class="py-5" style="background-image: url({{ 'HVN.png'| asset_url }});"></div>
</div>
<div class="w-full bg-cover  flex items-center justify-center" style="background-image: url({{ 'hero-bg.png'| asset_url }});">
  <h1 class=" p-60 font-instrument text-white text-6xl">
    Single Product
  </h1>
</div>
<div class=" container px-6 mx-auto my-28 text-gray-600">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-7">
    <div class="product--medias">
      {% for media in product.media %}
        <div class="overflow-hidden p-2">
          {% render 'product-media'
            , media: media %}
        </div>
      {% endfor %}
    </div>
    {% assign selected_variant = product.selected_or_first_available_variant %}


    <div class="product--information py-7">
      {% form 'product'
        , product %}
        <input
          type="hidden"
          name="id"
          value="{{ product.selected_or_first_available_variant.id }}">
        <div class="mb-4">
          <h1 class="font-instrument text-5xl">{{ product.title }}</h1>
        </div>

        <div class="my-3">
          <span class="text-xl text-black font-syne font-semibold">{{ product.price | money }}</span>
        </div>

        <div class="relative mb-4">
          <input
            type="number"
            name="quantity"
            id="Quantity-{{ section.id }}"
            value="1"
            min="1"
            class="number custom-number-input bg-buttonColor w-40 text-lg focus:outline-none rounded-2xl px-4 py-5"
            style="border: 1px solid #B8AF9E;">
        </div>

        <style>
          /* Hide default number input arrows */
          input[type="number"]::-webkit-outer-spin-button,
          input[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
          }

          input[type="number"] {
            -moz-appearance: textfield;
          }

          /* Custom number input styles */
          .custom-number-input {
            position: relative;
          }

          .custom-number-input::after {
            content: "";
            position: absolute;
            right: 10px;
            top: 30%;
            width: 10px;
            height: 10px;
            background-color: #B8AF9E;
            clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
            transform: translateY(-60%);
            cursor: pointer;
          }

          .custom-number-input::before {
            content: "";
            position: absolute;
            right: 10px;
            top: calc(50% + 10px);
            width: 10px;
            height: 10px;
            background-color: #B8AF9E;
            clip-path: polygon(0% 0%, 50% 100%, 100% 0%);
            transform: translateY(-60%);
            cursor: pointer;
          }
        </style>

        <script>
          document.addEventListener('DOMContentLoaded', function() {
            const input = document.querySelector('.custom-number-input');
            const incrementButton = document.createElement('div');
            const decrementButton = document.createElement('div');
          
            incrementButton.style.cssText = 'position: absolute; left: 120px; top: 30%; width: 15px; height: 10px; background-color: #5C584F; clip-path: polygon(50% 0%, 0% 100%, 100% 100%); transform: translateY(-60%); cursor: pointer;';
            decrementButton.style.cssText = 'position: absolute; left: 120px; top: calc(50% + 10px); width: 15px; height: 10px; background-color: #5C584F; clip-path: polygon(0% 0%, 50% 100%, 100% 0%); transform: translateY(-60%); cursor: pointer;';
          
            incrementButton.addEventListener('click', () => {
              input.value = parseInt(input.value) + 1;
            });
          
            decrementButton.addEventListener('click', () => {
              if (input.value > input.min) {
                input.value = parseInt(input.value) - 1;
              }
            });
          
            input.parentNode.appendChild(incrementButton);
            input.parentNode.appendChild(decrementButton);
          });
        </script>


        <div class="my-3 ">
          <p class="text-gray-700 ">{{ product.description }}</p>
        </div>

        <div class="my-3">
          <button
            type="submit"
            name="add"
            class="w-full px-6 py-4 bg-backgroudColor text-white rounded-2xl my-2"
            {% if product.selected_or_first_available_variant == false %}
            disabled
            {% endif %}>
            {% if product.selected_or_first_available_variant.available == false %}
              Sold out
            {% else %}
              Add to cart
            {% endif %}
          </button>
        </div>
        <h1 class="font-semibold text-black text-xl mb-2 font-syne">Ideal For</h1>

        <div class="flex gap-4">
          {% assign badges = product.tags %}
          {% for badge in badges %}
            <span class="py-1 font-medium text-black cursor-pointer text-sm px-4 rounded-full" style="border: 1px solid #000;">{{ badge }}</span>
          {% endfor %}

        </div>
      {% endform %}
    </div>

  </div>
</div>