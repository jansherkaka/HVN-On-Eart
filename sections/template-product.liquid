<div class="w-full bg-cover  flex items-center justify-center" style="background-image: url({{ 'hero-bg.png'| asset_url }});">
  <h1 class=" p-60 font-instrument text-white text-6xl">
    Single Product
  </h1>
</div>
<div class=" container mx-auto my-28 text-gray-600">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-7">
    <div class="product--medias">
      {% for media in product.media %}
        <div class="overflow-hidden p-2">
          {% render 'product-media'
            , media: media %}
        </div>
      {% endfor %}
    </div>
    {% assign selected_variant = product.selected_or_first_available_variant %}

    {% comment %} <div class="product--information py-7">
                                                                                                                                  <div class="mb-4">
                                                                                                                                    <h1 class="font-instrument text-5xl">{{ product.title }}</h1>
                                                                                                                                  </div>
                                                                                                                                  <div class="mb-4">
                                                                                                                                    <span class="text-xl text-black font-syne font-semibold">{{ product.price | money }}</span>
                                                                                                                                  </div>
                                                                                                              
                                          
                                          
                                                                                                                                  <div class="mb-4">
                                                                                                                                    <p class="text-sm font-syne">{{ product.content }}</p>
                                                                                                                                  </div>
                                                                                                                                  <div class="my-3">
                                                                                                                                    <button
                                                                                                                                      type="submit"
                                                                                                                                      name="add"
                                                                                                                                      class=" w-full px-4 py-3 bg-gray-900 text-white hover:bg-gray-500"
                                                                                                                                      {% if selected_variant.available == false %}
                                                                                                                                      disabled
                                                                                                                                      {% endif %}>
                                                                                                                                      {% if selected_variant.available == false %}
                                                                                                                                        Sold Out
                                                                                                                                      {% else %}
                                                                                                                                        Add to Card
                                                                                                                                      {% endif %}
                                                                                                                                    </button>
                                                                                                                                  </div>
                                                                                                         
                                                                                      </div> {% endcomment %}

    <div class="product--information py-7">
      {% form 'product'
        , product %}
        <input
          type="hidden"
          name="id"
          value="{{ product.selected_or_first_available_variant.id }}">
        <div class="mb-4">
          <h1 class="font-instrument text-5xl">{{ product.title }}</h1>
        </div>

        <div class="my-3">
          <span class="text-xl text-black font-syne font-semibold">{{ product.price | money }}</span>
        </div>
        <div class="mb-4">
          <input
            type="number"
            name="quantity"
            id="Quantity-{{ section.id }}"
            value="1"
            min="1"
            class=" bg-buttonColor text-center rounded-2xl px-2 py-4"
            style="border: 1px solid black;">
        </div>

        <div class="my-3">
          <p class="text-gray-700">{{ product.description }}</p>
        </div>

        <div class="my-3">
          <button
            type="submit"
            name="add"
            class="w-full px-6 py-4 bg-backgroudColor text-white rounded-2xl my-2"
            {% if product.selected_or_first_available_variant == false %}
            disabled
            {% endif %}>
            {% if product.selected_or_first_available_variant.available == false %}
              Sold out
            {% else %}
              Add to cart
            {% endif %}
          </button>
        </div>
        <h1 class="font-semibold text-black text-xl mb-2 font-syne">Ideal For</h1>
        <div class="flex gap-4">
          <div
            class="py-1 hover:bg-backgroudColor hover:text-white cursor-pointer text-sm px-4 rounded-full"
            style="border: 1px solid #B8AF9E;"
            onmouseover="this.style.borderColor='#B8AF9E'"
            onmouseout="this.style.borderColor='#B8AF9E'">Ideal for</div>
          <div
            class="py-1 hover:bg-backgroudColor hover:text-white  cursor-pointer text-sm px-4 rounded-full"
            style="border: 1px solid #B8AF9E;"
            onmouseover="this.style.borderColor='#B8AF9E'"
            onmouseout="this.style.borderColor='#B8AF9E'">Tacos</div>
          <div
            class="py-1 hover:bg-backgroudColor hover:text-white cursor-pointer text-sm px-4 rounded-full"
            style="border: 1px solid #B8AF9E;"
            onmouseover="this.style.borderColor='#B8AF9E'"
            onmouseout="this.style.borderColor='#B8AF9E'">Pasta</div>
        </div>
      {% endform %}
    </div>

  </div>
</div>